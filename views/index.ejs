<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Node js Google v3 Recaptcha Example Tutorial</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <br />
      <h1>Google Recaptcha Tutorial</h1>
      <br />
      <form method="post" action="/captcha">
        <input
          type="hidden"
          id="g-recaptcha-response"
          name="g-recaptcha-response"
        />
        <input type="hidden" name="action" value="validate_captcha" />
        <div class="row">
          <div class="col-md-4"></div>
          <div class="form-group col-md-4">
            <label for="name">Name:</label>
            <input type="text" class="form-control" name="name" />
          </div>
        </div>
        <div class="row">
          <div class="col-md-4"></div>
          <div class="form-group col-md-4">
            <button
              type="submit"
              class="btn btn-success"
              style="margin-left: 38px"
            >
              Send
            </button>
          </div>
        </div>
      </form>
    </div>

    <script src="https://www.google.com/recaptcha/api.js?render=6LeQW6UeAAAAAJAuqbH4jgqebTzZvMtOSW2O2bgf"></script>  //paste your site key in the url after render=
    <script>
      grecaptcha.ready(function () {
        // do request for recaptcha token
        // response is promise with passed token
        grecaptcha
          .execute("6LeQW6UeAAAAAJAuqbH4jgqebTzZvMtOSW2O2bgf", {   // paste your site key here
            action: "validate_captcha",
          })
          .then(function (token) {
            // add token value to form
            document.getElementById("g-recaptcha-response").value = token;
          });
      });
    </script>
  </body>
</html>
